- @page_title = 'Members list'

%table
  %thead
    %tr
      %th Name
      %th Aikido rank
      %th Ki rank
      %th{:colspan => 2} Actions
  %tbody
    - for member in @members do
      %tr{:class => cycle('odd', 'even')}
        %td= link_to member.full_name(:last_first => true), member_path(member)
        %td
          =h member.aikido_rank.description.capitalize if member.aikido_rank
        %td
          =h member.ki_rank.description.capitalize if member.ki_rank
        %td= link_to 'edit', edit_member_path(member)
        %td= link_to 'destroy', member, :confirm => 'Are you sure?', :method => :delete

%p= link_to 'New member', new_member_path